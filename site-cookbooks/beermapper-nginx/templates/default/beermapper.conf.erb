server {
  listen 80;
  server_name beermapper-api.com;
  access_log logs/beermapper.access.log;

  root /var/apps/beermapper/current/public;
  passenger_enabled on;
  rails_env <%= @rails_env %>;
  charset utf-8;
}

server {
  listen 80;
  server_name <%= @beermapper_domain_name %>;
  root /var/apps/beermapper/current/ember/dist;

  location /api/v1/ {
    proxy_pass http://beermapper-api.com;
  }
}
server {
  listen 80;
  server_name www.<%= @beermapper_domain_name %>;
  rewrite ^(.*)$ $scheme://<%= @beermapper_domain_name %>$1;
}
